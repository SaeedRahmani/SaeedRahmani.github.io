---
import { siteConfig } from "../config";
const hasPublications = siteConfig.publications && siteConfig.publications.length > 0;

// Group publications by type
const journalPubs = siteConfig.publications ? siteConfig.publications.filter(pub => pub.type === 'Journal') : [];
const conferencePubs = siteConfig.publications ? siteConfig.publications.filter(pub => pub.type === 'Conference') : [];
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <a
              href={siteConfig.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="group block mb-8 p-6 bg-gradient-to-r from-gray-50 to-white rounded-xl border-2 border-gray-200 hover:border-gray-300 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 rounded-full flex items-center justify-center"
                       style={`background-color: ${siteConfig.accentColor}15`}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      style={`color: ${siteConfig.accentColor}`}
                    >
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M10 6h-6a1 1 0 0 0 -1 1v11a1 1 0 0 0 1 1h11a1 1 0 0 0 1 -1v-6" />
                      <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                      <path d="M16 4l3.5 3.5" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-lg font-semibold text-gray-900">
                      View all publications
                    </div>
                    <div class="text-sm text-gray-500">
                      on Google Scholar
                    </div>
                  </div>
                </div>
                <div class="w-10 h-10 rounded-full flex items-center justify-center bg-gray-900 text-white transition-all duration-300 group-hover:bg-gray-700">
                  <svg
                    class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 17L17 7M17 7H7M17 7V17"
                    />
                  </svg>
                </div>
              </div>
            </a>

            <div class="space-y-12">
              {/* Journal Publications */}
              {journalPubs.length > 0 && (
                <div>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2"
                      style={`border-color: ${siteConfig.accentColor}`}>
                    Journal Publications
                  </h3>
                  <div class="space-y-6">
                    {journalPubs.map((pub, index) => {
                      const Component = pub.link ? "a" : "div";
                      const linkProps = pub.link
                        ? {
                            href: pub.link,
                            target: "_blank",
                            rel: "noopener noreferrer",
                          }
                        : {};

                      return (
                        <div class="group relative">
                          <Component
                            {...linkProps}
                            class={`block bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 transition-all duration-300 ${
                              pub.link
                                ? "hover:shadow-md hover:border-gray-200 hover:-translate-y-0.5"
                                : ""
                            }`}
                          >
                            <div class="flex items-start justify-between mb-3">
                              <span
                                class="text-sm font-mono"
                                style={{ color: siteConfig.accentColor }}
                              >
                                J{index + 1}
                              </span>
                              <span class="text-xs sm:text-sm text-gray-500 font-medium">
                                {pub.year}
                              </span>
                            </div>
                            <h4 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                              {pub.title}
                            </h4>
                            <p class="text-xs sm:text-sm text-gray-600 mb-2">
                              {pub.authors}
                            </p>
                            <p class="text-xs sm:text-sm text-gray-500 italic mb-3">
                              {pub.venue}
                            </p>
                            {pub.award && (
                              <div class="mb-3">
                                <span class="inline-flex items-center px-2.5 py-1 bg-yellow-50 text-yellow-800 rounded-full text-xs font-medium border border-yellow-200">
                                  <svg
                                    class="w-3 h-3 mr-1"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                  >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                  </svg>
                                  {pub.award}
                                </span>
                              </div>
                            )}
                            {pub.link && (
                              <div class="flex items-center gap-1 text-xs sm:text-sm font-medium"
                                   style={`color: ${siteConfig.accentColor}`}>
                                View Publication
                                <svg
                                  class="w-3 h-3 transition-transform group-hover:translate-x-0.5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                  />
                                </svg>
                              </div>
                            )}
                          </Component>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}

              {/* Conference Publications */}
              {conferencePubs.length > 0 && (
                <div>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2"
                      style={`border-color: ${siteConfig.accentColor}`}>
                    Conference Publications
                  </h3>
                  <div class="space-y-6">
                    {conferencePubs.map((pub, index) => {
                      const Component = pub.link ? "a" : "div";
                      const linkProps = pub.link
                        ? {
                            href: pub.link,
                            target: "_blank",
                            rel: "noopener noreferrer",
                          }
                        : {};

                      return (
                        <div class="group relative">
                          <Component
                            {...linkProps}
                            class={`block bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 transition-all duration-300 ${
                              pub.link
                                ? "hover:shadow-md hover:border-gray-200 hover:-translate-y-0.5"
                                : ""
                            }`}
                          >
                            <div class="flex items-start justify-between mb-3">
                              <span
                                class="text-sm font-mono"
                                style={{ color: siteConfig.accentColor }}
                              >
                                C{index + 1}
                              </span>
                              <span class="text-xs sm:text-sm text-gray-500 font-medium">
                                {pub.year}
                              </span>
                            </div>
                            <h4 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                              {pub.title}
                            </h4>
                            <p class="text-xs sm:text-sm text-gray-600 mb-2">
                              {pub.authors}
                            </p>
                            <p class="text-xs sm:text-sm text-gray-500 italic mb-3">
                              {pub.venue}
                            </p>
                            {pub.award && (
                              <div class="mb-3">
                                <span class="inline-flex items-center px-2.5 py-1 bg-yellow-50 text-yellow-800 rounded-full text-xs font-medium border border-yellow-200">
                                  <svg
                                    class="w-3 h-3 mr-1"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                  >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                  </svg>
                                  {pub.award}
                                </span>
                              </div>
                            )}
                            {pub.link && (
                              <div class="flex items-center gap-1 text-xs sm:text-sm font-medium"
                                   style={`color: ${siteConfig.accentColor}`}>
                                View Publication
                                <svg
                                  class="w-3 h-3 transition-transform group-hover:translate-x-0.5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                  />
                                </svg>
                              </div>
                            )}
                          </Component>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
