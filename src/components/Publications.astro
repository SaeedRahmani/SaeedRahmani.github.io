---
import { siteConfig } from "../config";
const hasPublications = siteConfig.publications && siteConfig.publications.length > 0;

// Group publications by type
const journalPubs = siteConfig.publications ? siteConfig.publications.filter(pub => pub.type === 'Journal') : [];
const conferencePubs = siteConfig.publications ? siteConfig.publications.filter(pub => pub.type === 'Conference') : [];
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="mb-8">
              <a
                href={siteConfig.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-base sm:text-lg font-medium"
                style={`color: ${siteConfig.accentColor}`}
              >
                View all publications on Google Scholar
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="transition-transform group-hover:translate-x-1"
                >
                  <path d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </a>
            </div>

            <div class="space-y-12">
              {/* Journal Publications */}
              {journalPubs.length > 0 && (
                <div>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2"
                      style={`border-color: ${siteConfig.accentColor}`}>
                    Journal Publications
                  </h3>
                  <div class="space-y-6">
                    {journalPubs.map((pub, index) => {
                      const Component = pub.link ? "a" : "div";
                      const linkProps = pub.link
                        ? {
                            href: pub.link,
                            target: "_blank",
                            rel: "noopener noreferrer",
                          }
                        : {};

                      return (
                        <div class="group relative">
                          <Component
                            {...linkProps}
                            class={`block bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 transition-all duration-300 ${
                              pub.link
                                ? "hover:shadow-md hover:border-gray-200 hover:-translate-y-0.5"
                                : ""
                            }`}
                          >
                            <div class="flex items-start justify-between mb-3">
                              <span
                                class="text-sm font-mono"
                                style={{ color: siteConfig.accentColor }}
                              >
                                J{index + 1}
                              </span>
                              <span class="text-xs sm:text-sm text-gray-500 font-medium">
                                {pub.year}
                              </span>
                            </div>
                            <h4 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                              {pub.title}
                            </h4>
                            <p class="text-xs sm:text-sm text-gray-600 mb-2">
                              {pub.authors}
                            </p>
                            <p class="text-xs sm:text-sm text-gray-500 italic mb-3">
                              {pub.venue}
                            </p>
                            {pub.award && (
                              <div class="mb-3">
                                <span class="inline-flex items-center px-2.5 py-1 bg-yellow-50 text-yellow-800 rounded-full text-xs font-medium border border-yellow-200">
                                  <svg
                                    class="w-3 h-3 mr-1"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                  >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                  </svg>
                                  {pub.award}
                                </span>
                              </div>
                            )}
                            {pub.link && (
                              <div class="flex items-center gap-1 text-xs sm:text-sm font-medium"
                                   style={`color: ${siteConfig.accentColor}`}>
                                View Publication
                                <svg
                                  class="w-3 h-3 transition-transform group-hover:translate-x-0.5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                  />
                                </svg>
                              </div>
                            )}
                          </Component>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}

              {/* Conference Publications */}
              {conferencePubs.length > 0 && (
                <div>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2"
                      style={`border-color: ${siteConfig.accentColor}`}>
                    Conference Publications
                  </h3>
                  <div class="space-y-6">
                    {conferencePubs.map((pub, index) => {
                      const Component = pub.link ? "a" : "div";
                      const linkProps = pub.link
                        ? {
                            href: pub.link,
                            target: "_blank",
                            rel: "noopener noreferrer",
                          }
                        : {};

                      return (
                        <div class="group relative">
                          <Component
                            {...linkProps}
                            class={`block bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 transition-all duration-300 ${
                              pub.link
                                ? "hover:shadow-md hover:border-gray-200 hover:-translate-y-0.5"
                                : ""
                            }`}
                          >
                            <div class="flex items-start justify-between mb-3">
                              <span
                                class="text-sm font-mono"
                                style={{ color: siteConfig.accentColor }}
                              >
                                C{index + 1}
                              </span>
                              <span class="text-xs sm:text-sm text-gray-500 font-medium">
                                {pub.year}
                              </span>
                            </div>
                            <h4 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                              {pub.title}
                            </h4>
                            <p class="text-xs sm:text-sm text-gray-600 mb-2">
                              {pub.authors}
                            </p>
                            <p class="text-xs sm:text-sm text-gray-500 italic mb-3">
                              {pub.venue}
                            </p>
                            {pub.award && (
                              <div class="mb-3">
                                <span class="inline-flex items-center px-2.5 py-1 bg-yellow-50 text-yellow-800 rounded-full text-xs font-medium border border-yellow-200">
                                  <svg
                                    class="w-3 h-3 mr-1"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                  >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                  </svg>
                                  {pub.award}
                                </span>
                              </div>
                            )}
                            {pub.link && (
                              <div class="flex items-center gap-1 text-xs sm:text-sm font-medium"
                                   style={`color: ${siteConfig.accentColor}`}>
                                View Publication
                                <svg
                                  class="w-3 h-3 transition-transform group-hover:translate-x-0.5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                  />
                                </svg>
                              </div>
                            )}
                          </Component>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
